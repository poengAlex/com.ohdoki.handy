{
    "actions": [
        {
            "id": "hamp-start",
            "title": {
                "en": "Alternating motion"
            },
            "titleFormatted": {
                "en": "[[start]] alternating motion"
            },
            "hint": {
                "en": "Start or stop Handy Alternate Motion Protocol (HAMP)"
            },
            "args": [
                {
                    "type": "checkbox",
                    "name": "start",
                    "title": {
                        "en": "Start"
                    }
                }
            ]
        },
        {
            "id": "hamp-velocity",
            "title": {
                "en": "Alternating motion velocity"
            },
            "titleFormatted": {
                "en": "Set velcoity to [[velocity]]"
            },
            "hint": {
                "en": "Set the speed of HAMP mode"
            },
            "args": [
                {
                    "type": "range",
                    "name": "velocity",
                    "title": {
                        "en": "Velocity"
                    },
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "label": "%"
                }
            ]
        },
        {
            "id": "play-script-preset",
            "title": {
                "en": "Play a script preset"
            },
            "titleFormatted": {
                "en": "Play preset script ([[preset]])."
            },
            "hint": {
                "en": "Play a preset script on Handy"
            },
            "args": [
                {
                    "type": "dropdown",
                    "name": "preset",
                    "title": {
                        "en": "Preset"
                    },
                    "values": [
                        {
                            "id": "up-down-5s-192mms",
                            "label": {
                                "en": "Up down for 5 sec medium speed"
                            }
                        },
                        {
                            "id": "sinus-900ms",
                            "label": {
                                "en": "sinus wave"
                            }
                        },
                        {
                            "id": "increasing-10s",
                            "label": {
                                "en": "Slow, medium, fast (10 sec)"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "id": "play-script",
            "title": {
                "en": "Play a script"
            },
            "titleFormatted": {
                "en": "Play script from [[url]]"
            },
            "hint": {
                "en": "Play a script on the Handy"
            },
            "args": [
                {
                    "type": "text",
                    "title": {
                        "en": "url"
                    },
                    "name": "url",
                    "placeholder": {
                        "en": "The url of the script [CSV]"
                    }
                }
            ]
        },
        {
            "id": "set-position",
            "title": {
                "en": "Set position of the slider"
            },
            "titleFormatted": {
                "en": "Set Handy to [[position]] within [[duration]]"
            },
            "hint": {
                "en": "Set the position of the slider"
            },
            "args": [
                {
                    "type": "range",
                    "name": "duration",
                    "title": "The duration of the move",
                    "label": "ms",
                    "min": 1,
                    "max": 5000,
                    "step": 1
                },
                {
                    "type": "range",
                    "name": "position",
                    "title": "The position of the slider",
                    "label": "mm",
                    "min": 0,
                    "max": 100,
                    "step": 1
                }
            ]
        },
        {
            "id": "stroke-zone",
            "title": {
                "en": "Set the stroke zone"
            },
            "titleFormatted": {
                "en": "Set stroke zone from [[min]] to [[max]]"
            },
            "hint": {
                "en": "Set the stroke zone"
            },
            "args": [
                {
                    "type": "range",
                    "title": {
                        "en": "range min"
                    },
                    "name": "min",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "label": "%"
                },
                {
                    "type": "range",
                    "title": {
                        "en": "range max"
                    },
                    "name": "max",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "label": "%"
                }
            ]
        }
    ],
    "conditions": [
        {
            "id": "handy-connected",
            "title": {
                "en": "Online"
            },
            "titleFormatted": {
                "en": "Is !{{online|offline}}"
            },
            "hint": {
                "en": "Checks if your Handy is online?"
            }
        }
    ],
    "triggers": [
        {
            "id": "handy-offline",
            "title": {
                "en": "Handy offline"
            },
            "titleFormatted": {
                "en": "Handy is offline"
            },
            "hint": {
                "en": "Triggers when your Handy is offline"
            }
        },
        {
            "id": "handy-online",
            "title": {
                "en": "Handy online"
            },
            "titleFormatted": {
                "en": "Handy is online"
            },
            "hint": {
                "en": "Triggers when your Handy is online"
            }
        }
    ]
}